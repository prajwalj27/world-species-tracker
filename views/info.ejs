    </div>
    <hr>


    <div class="small-container" >
      
          <!-- <h3 id="expmam">Mammals > Elephants</h3> -->
          <% if (result[_id - 1].conservationStatus.toLowerCase() === "critically endangered") { %>
            <h2 id="ele" style="margin-bottom: 25px; background-color: rgb(133, 40, 6); color: rgb(253, 196, 196)"><%= result[_id - 1].name%></h2>
          <% } %>
          <% if (result[_id - 1].conservationStatus.toLowerCase() === "endangered") { %>
            <h2 id="ele" style="margin-bottom: 25px; background-color: rgb(236, 201, 0); color: rgb(61, 54, 19)"><%= result[_id - 1].name%></h2>
          <% } %> 
          <% if (result[_id - 1].conservationStatus.toLowerCase() === "near threatened") { %>
            <h2 id="ele" style="margin-bottom: 25px; background-color: rgb(122, 168, 117); color: rgb(26, 51, 23)"><%= result[_id - 1].name%></h2>
          <% } %> 
          <% if (result[_id - 1].conservationStatus.toLowerCase() === "vulnerable") { %>
            <h2 id="ele" style="margin-bottom: 25px; background-color: rgb(104, 146, 180); color: rgb(17, 40, 53)"><%= result[_id - 1].name%></h2>
          <% } %> 
          <% if (result[_id - 1].conservationStatus.toLowerCase() === "least concern") { %>
            <h2 id="ele" style="margin-bottom: 25px; background-color: rgb(167, 206, 238); color: rgb(18, 22, 24)"><%= result[_id - 1].name%></h2>
          <% } %> 
      
            <img id="desc-img" class="elesec" src="images/blank.png" alt="animal image" align="right" style="margin: 23px; margin-top: 0"/>
            
            <p id="para" style="color: rgb(63, 112, 93)">
              <ol style="list-style-type:none;" id="info">
                <% if (result[_id - 1].conservationStatus !== "") { %>
                  <li style="font-size: large; color: rgb(38, 66, 56);"><span>Status - </span><%= result[_id - 1].conservationStatus%></li>
                <%} %>
                <% if (result[_id - 1].population !== "") { %>
                  <li><span>Population - </span>around <%= result[_id - 1].population%></li>
                <%} %>
                <% if (result[_id - 1].order !== "") { %>
                  <li><span>Order - </span><%= result[_id - 1].order%></li>
                <%} %>
                <% if (result[_id - 1].height !== "") { %>
                  <li><span>Height - </span>approx. <%= result[_id - 1].height%></li>
                <%} %>
                <% if (result[_id - 1].weight !== "") { %>
                  <li><span>Weight - </span>approx. <%= result[_id - 1].weight%></li>
                <%} %>
                <% if (result[_id - 1].length !== "") { %>
                  <li><span>Length - </span>approx. <%= result[_id - 1].length%></li>
                <%} %>
                <% if (result[_id - 1].places !== "") { %>
                  <li><span>Places Found - </span><%= result[_id - 1].places%></li>
                <%} %>
            </ol>
            </p>

            <br><br>
    
            <p id="description" >
              <%= result[_id - 1].description%>
            </p>

            <br><br><br>



    </div>

