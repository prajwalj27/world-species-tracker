    <div class="small-container">
      
          <h2 id="expmam" style="text-align: center; margin-bottom: 25px; font-weight: bold;"><%=status%> Species</h2>
          
          <table class="table table-striped table-hover text-center">
            <thead>
              <th>Name</th>
              <th>Scientific Name</th>
              <th>Conservation Status</th>
              <th> </th>
            </thead>
            <tbody id="tbody">
              <% result.forEach(function(result) { %>
                <tr>
                  <td><a href="/<%= result._id %>" style="font-weight: 600;"><%= result.name %></a></td>
                  <td><%= result.scientificName %></td>
                  <td><%= result.conservationStatus %></td>
                </tr>
                <% }); %>
            </tbody>
          </table>
   
